<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".perfil">

  <include
      layout="@layout/toolbar"
      tools:layout_editor_absoluteX="0dp"
      tools:layout_editor_absoluteY="0dp" />
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:src="@drawable/reparo"
      android:layout_marginRight="345dp"
      app:layout_constraintStart_toEndOf="@id/iconperfil"
      app:layout_constraintBottom_toTopOf="@id/right"/>
  <ImageView
    android:id="@+id/perfil_foto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_marginTop="40dp"
    android:src="@drawable/perfil_foto"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
  <ImageView
      android:id="@+id/iconperfil"
      android:background="@drawable/person"
      android:layout_width="130dp"
      android:layout_height="130dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/perfil_foto"/>

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/quartos"
      android:layout_width="145dp"
      android:layout_height="139dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="18dp"
      android:textSize="20sp"
      android:background="@drawable/ic_bedicon"
      android:textAllCaps="false"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/perfil_foto" />
  <ImageView
      android:layout_width="180dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:layout_marginTop="8dp"
      android:src="@drawable/dashboard"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/perfil_foto" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/sobre_nos"
      android:layout_width="145dp"
      android:layout_height="135dp"
      android:layout_marginStart="215dp"
      android:layout_marginTop="18dp"
      android:textSize="20sp"
      android:background="@drawable/ic_nos"
      android:textAllCaps="false"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/perfil_foto" />
  <ImageView
      android:layout_width="180dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="200dp"
      android:layout_marginTop="8dp"
      android:src="@drawable/dashboard"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/perfil_foto" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/deslogar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/deslogar"
      android:textSize="20sp"
      android:textAllCaps="false"
      android:layout_margin="20dp"
      android:padding="20dp"
      android:background="@color/black"
      app:layout_constraintTop_toBottomOf="@+id/quartos"
      style="@style/button" />

  </androidx.constraintlayout.widget.ConstraintLayout>